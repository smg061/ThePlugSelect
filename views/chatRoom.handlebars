<div class="timer text-center">
        <div class="timer">Bidding will start in : 
            <span id="timer" style="color:red;">0
                0:00
            </span> 
            (Initial Bid Amt : 
            <span class="init-bid" data-init-bid="99">
                99
            </span>)
        </div>

        <!-- <h3 class="timerStyle text-center">TIME LEFT:{{> timer}}</h3>-->
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div class="card imageCard">
                        <div class="card-header border-bottom-0 infoHeader">
                            <h4 class="itemName text-center" style="font-family: Bangers;">{{productData.product_name}}</h4>
                        </div>
                        <div class="card-body border-0 imageContain">
                            <img src= "{{productData.image}}" style="width: 80%; max-height:80%; max-width:80%;" class="rounded d-block mx-auto">
                        </div>
                        <div class="card-footer itemInfo">
                            <div class="d-flex justify-content-start">
                                <ul>
                                    <li class="infoList">Category: {{getObjectProperty productData "category.category_name"}} </li>
                                    <li class="infoList">Brand: {{getObjectProperty productData "brand.brand_name"}} </li>
                                    <li class="infoList">Description: {{productData.description}} </li>
                                    <li class="infoList" id="price">Price: {{productData.price}} </li>
                                    <li class="infoList">Size: {{productData.size}} </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-8 col-xl-6">
					<div class="card chatCard">
						<div class="card-header chatHeader">
							<div class="d-flex bd-highlight mb-3">
								<div class="p-2 bd-highlight userImg">
                                    <img src="{{userData.profile_picture}}" class="rounded-circle" style="width: 55px; height: 40px;">
								</div>
								<div class="userName">
									<p>{{userData.username}}</p>
                                </div>
							</div>
						</div>
						<div class="card-body msgBody">
							<div class="d-flex justify-content-start mb-4">
								<div>
                                    <img src="{{userData.profile_picture}}" class="rounded-circle" style="width: 50px; height: 40px;">
                                </div>
                                <div class="chatContainer">
									<div id="test"></div>
                                    <button onclick="sendMessage()" class="btn"><i class="fas fa-paper-plane"></button></i>Send</button>
                                    </form>
									
								</div>
                            </div>
                        </div>
                        

						<div class="card-footer cardEnd">
                            <div class="bidDescript text-center" style="font-family: Bangers;">
                                <h5>To start bidding, click the amount you wish to drop it</h5>
                            </div>
                            
							<div class="d-flex justify-content-center">
                                {{#if loggedIn}}
                                <button class="btn bidBtns" type="submit">100</button>
                                <button class="btn bidBtns" type="submit">200</button>
                                <button class="btn bidBtns" type="submit">300</button>
                                <button class="btn bidBtns" type="submit">400</button>
                                <button class="btn bidBtns" type="submit">500</button>
                                <button class="btn bidBtns" type="submit">1000</button>
                                <div class="dropdown" data-toggle="dropdown">
                                    <button class=" btn customBidBtn" type="button"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                     Custom Bid
                                    </button>
                                    <div class="dropdown-menu">
                                    <form class="customBid-form">
                                       <div class="form-group">
                                           <label class="customBidLabel" for="custom-Bid">Bid:</label>
                                           <input class="form-control" type="text" id="bid-form" />
                                      </div>
                                    <div class="form-group">
                                        <button class="btn customBidBtn" id="customBidBtn" type="submit">Enter</button>
                                   </div>
                                   </form>
                

                                </div>
                                
                                {{else}}
                                <p>You must be logged in to make a bid</p>
                            </div>
                            {{/if}}
						</div>
					</div>
				</div>
            </div>
        </div>


